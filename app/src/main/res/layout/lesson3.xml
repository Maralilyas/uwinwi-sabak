<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/real"
    android:layout_width="100dp"
    android:layout_height="100dp">
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/green_book" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/hey" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/real"
        android:layout_alignTop="@+id/real"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Абай жолы"
        android:textColor="@color/project_color"/>
    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Мұхтар Әуезов"
        android:textColor="@color/project_color"
        android:layout_toRightOf="@+id/real"
        android:layout_below="@id/textView"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/real"
        android:layout_below="@+id/author"
        android:numStars="5"
        android:rating="4"
        android:stepSize="1"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/oku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ratingBar"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#1CC623"
        android:textColor="@color/white"
        android:text="@string/oku_text"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/project_color"
        android:textColor="@color/white"
        android:layout_margin="30dp"
        android:text="+"/>
</RelativeLayout>